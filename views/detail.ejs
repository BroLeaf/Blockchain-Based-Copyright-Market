<html>
	<head>
		<title>Showdetail</title>
		<!-- HTML meta 設定 -->
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="google-site-verification" content="" />
		<link rel="stylesheet" href="/css/bootstrap.min.css">
		<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script> 
			$(function(){
			  $("#includedContent").load("topBar.html"); 
			});
		</script>
	</head>

	<body>
		<div id="includedContent"></div>
        <center>
				<h1>
					<font size='9'><%=Persons[0].filename%></font>
				</h1>

				<br><br><br>
				<a href="#" class="fa fa-google"></a>
				<a href="#" class="fa fa-twitter"></a>
				<a href="#" class="fa fa-github"></a>
				<a href="#" class="fa fa-facebook"></a><br>
				
				<table border="3">
					<tr>
						<td>Type</td>
						<td><%= Persons[0].type%></td>
					</tr>
					<tr>
						<td>Author</td>
						<td><%= Persons[0].auth %></td>
					</tr>
					<tr>
						<td>Year</td>
						<td><%= Persons[0].year %></td>
					</tr>
					<tr>
						<td>Contract Address</td>
						<td id='contract'><%= Persons[0].addr%></td>
					</tr>
					<tr>
						<td>File Hash (sha256)</td>
						<td><%= Persons[0].fileHash%></td>
					</tr>
				</table>
			    <br><br>				
				<button onclick="sendEth()"> sendEth <br> (for demo) </button>
				<button onclick="download()">download</button>
		</center>
				
		<script>
			function download(){
				let keyword = "<%= Persons[0].keyword %>";
				let addr = "<%= Persons[0].addr %>";
				if(isSent(addr))
					keywordFinish(keyword);
				else
					alert("Please pay first");
			}
		</script>

		<script src="/js/asmcrypto.js"></script>
		<script src="/js/jquery-3.1.1.min.js"></script>
		<script src="/js/PFCCTR.js"></script>
		<script src="/js/Utility.js"></script>
		<script src="/js/download.js"></script>
		<script src="/js/users.js"></script>
	</body>
</html>